<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to - <%= campground.name %></h1>
        
        <div style="width:30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id%>/comments", method="POST">
                <!--form control makes each element block level-->
                <div class="form-group">
                    <!--<input class="form-control" type="text" name="comment[text]" placeholder="text">-->
                    <textarea class="form-control" name="comment[text]" placeholder="text"></textarea>
                </div>
                <div class="form-group">
                <!--btn-block makes the button block level-->
                    <button class="btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
            
            <div>
                <a href="/campgrounds">Go Back</a>
            </div>
            
        </div>
    </div>
</div>
<% include ../partials/footer %>