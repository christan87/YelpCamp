<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <div>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </div>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <%campgrounds.forEach(function(campground){%>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4"> <!--mb-4 "margin bottom 4"-->
                <div class="card">
                  <img src="<%=campground.image%>" class="card-img-top" alt="<%=campground.name%>">
                  <div class="card-body">
                    <h5 class="card-title"><%=campground.name%></h5>
                    <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </div>
                </div>
            </div>
        <% }); %>
    </div>
    
    <p>Welcome to YelpCamp</p>
    
    <a href="/">Return Home</a>

<% include ../partials/footer %>